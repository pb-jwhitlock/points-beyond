---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Points Beyond - AI Automation Consultant" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/points-beyond/logo.png" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/points-beyond/" class="logo">
          <img src="/points-beyond/logo.png" alt="Points Beyond logo" class="logo-img" />
          Points Beyond
        </a>
        <ul>
          <li><a href="/points-beyond/">Home</a></li>
          <li><a href="/points-beyond/services/">Services</a></li>
          <li><a href="/points-beyond/about/">About</a></li>
          <li><a href="/points-beyond/contact/">Contact</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="footer-brand">
        <img src="/points-beyond/logo.png" alt="Points Beyond logo" class="footer-logo" />
        <span>Points Beyond</span>
      </div>
      <p>&copy; {new Date().getFullYear()} Points Beyond. All rights reserved.</p>
      <p class="copyright-notice">All content, logos, and images are protected by copyright law.</p>
      <p>
        <a href="https://www.linkedin.com/in/johnhwhitlock/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
      </p>
    </footer>

    <script>
      // Disable right-click on images
      document.addEventListener('contextmenu', (e) => {
        if (e.target.tagName === 'IMG') {
          e.preventDefault();
        }
      });

      // Disable image dragging
      document.addEventListener('dragstart', (e) => {
        if (e.target.tagName === 'IMG') {
          e.preventDefault();
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-bg-dark: #1a1a2e;
    --color-bg-mid: #16213e;
    --color-bg-deep: #0f3460;
    --color-primary: #8b5cf6;
    --color-primary-light: #a78bfa;
    --color-primary-dark: #7c3aed;
    --color-text: #e2e8f0;
    --color-text-muted: #94a3b8;
    --color-text-dim: #64748b;
    --color-card-bg: rgba(255, 255, 255, 0.05);
    --color-card-border: rgba(255, 255, 255, 0.1);
    --color-card-hover: rgba(255, 255, 255, 0.08);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: BlinkMacSystemFont, 'Segoe UI', Roboto, system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    background: linear-gradient(135deg, var(--color-bg-dark) 0%, var(--color-bg-mid) 50%, var(--color-bg-deep) 100%);
    background-attachment: fixed;
    line-height: 1.6;
    min-height: 100vh;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--color-primary-light);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  h1, h2, h3, h4 {
    color: var(--color-text);
    font-weight: 700;
  }

  /* Image protection */
  img {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    pointer-events: none;
  }

  /* Allow clicking on linked images */
  a img {
    pointer-events: auto;
  }
</style>

<style>
  header {
    background: rgba(26, 26, 46, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-card-border);
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
    font-size: 1.5rem;
    font-weight: bold;
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo-img {
    height: 36px;
    width: auto;
  }

  .logo:hover {
    text-decoration: none;
    opacity: 0.9;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  nav ul a {
    color: var(--color-text-muted);
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
  }

  nav ul a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width 0.3s ease;
  }

  nav ul a:hover {
    color: var(--color-text);
  }

  nav ul a:hover::after {
    width: 100%;
  }

  main {
    flex: 1;
  }

  footer {
    background: rgba(15, 52, 96, 0.5);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-top: 1px solid var(--color-card-border);
    padding: 2rem;
    text-align: center;
    color: var(--color-text-dim);
  }

  .footer-brand {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .footer-logo {
    height: 32px;
    width: auto;
  }

  .footer-brand span {
    font-size: 1.25rem;
    font-weight: bold;
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  footer p {
    margin: 0.5rem 0;
  }

  .copyright-notice {
    font-size: 0.8rem;
    color: var(--color-text-dim);
    opacity: 0.7;
  }

  footer a {
    color: var(--color-primary-light);
  }

  footer a:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    header {
      padding: 1rem;
    }

    nav {
      flex-direction: column;
      gap: 1rem;
    }

    nav ul {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem 1.5rem;
    }

    nav ul a {
      padding: 0.75rem 0.5rem;
      min-height: 44px;
      display: flex;
      align-items: center;
    }

    .logo {
      font-size: 1.25rem;
    }

    .logo-img {
      height: 28px;
    }

    .footer-logo {
      height: 24px;
    }
  }

  @media (max-width: 480px) {
    nav ul {
      gap: 0.25rem 1rem;
    }
  }
</style>
