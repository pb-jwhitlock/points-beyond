---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "AI-Driven Marketing for the Modern Trade" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Urbanist:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <script>
      // Disable right-click on images
      document.addEventListener('contextmenu', (e) => {
        if ((e.target as HTMLElement).tagName === 'IMG') {
          e.preventDefault();
        }
      });

      // Disable image dragging
      document.addEventListener('dragstart', (e) => {
        if ((e.target as HTMLElement).tagName === 'IMG') {
          e.preventDefault();
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #4f46e5;
    --color-primary-light: #818cf8;
    --color-primary-dark: #4338ca;
    --color-secondary: #ea580c;
    --color-bg: #ffffff;
    --color-surface: #f9fafb;
    --color-text: #1f2937;
    --color-text-muted: #6b7280;
    --color-text-dim: #9ca3af;
    --color-border: #e5e7eb;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Urbanist', sans-serif;
    font-size: 18px;
    color: var(--color-text);
    background: var(--color-bg);
    line-height: 1.6;
    min-height: 100vh;
  }

  body {
    background: #ffffff; /* Sets a base, but components can override */
      min-height: 100vh;
      display: flex;
      flex-direction: column;
  }

  main {
    flex: 1;
    background: transparent; /* Allows gradients to show through */
  }

  /* --- SMOOTH TRANSITION --- */
  header {
    background: linear-gradient(
      to bottom, 
      rgba(235, 224, 255, 1) 0%, 
      rgba(224, 242, 255, 1) 40%, 
      #ffffff 100%
    ) !important;
    border: none !important;
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }
</style>