---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Points Beyond - AI Automation Consultant">
  <div class="astrolus-page">
    <!-- Hero Section -->
    <section class="hero" id="home">
      <div class="hero-gradient" aria-hidden="true">
        <div class="gradient-blob gradient-left"></div>
        <div class="gradient-blob gradient-right"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <div class="hero-text">
            <h1>Strategic content for the <span class="text-primary">AI search era.</span></h1>
            <p class="hero-sub">
              AI-powered search engines are reshaping how audiences discover your brand. Points Beyond helps businesses create content strategies that ensure visibility in AI-generated search results.
            </p>
            <div class="hero-cta">
              <a href="#contact" class="btn btn-primary">
                <span>Get Started</span>
              </a>
              <a href="/points-beyond/services/" class="btn btn-secondary">
                <span>Learn more</span>
              </a>
            </div>
          </div>
          <div class="hero-stats">
            <div class="stat-item">
              <h6>Answer Engine Optimization</h6>
              <p>Be the answer AI delivers</p>
            </div>
            <div class="stat-item">
              <h6>Search Engine Optimization</h6>
              <p>Rank in traditional & AI results</p>
            </div>
            <div class="stat-item">
              <h6>AI Voice Receptionist</h6>
              <p>24/7 intelligent call handling</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features" id="features">
